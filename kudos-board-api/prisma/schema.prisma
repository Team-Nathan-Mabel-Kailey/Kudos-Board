generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  board_id  Int      @id @default(autoincrement())
  title     String
  category  String
  author    String
  createdAt DateTime @default(now())
  cards     Card[]
}

model Card {
  card_id   Int      @id @default(autoincrement())
  title     String
  message   String
  gifUrl    String
  author    String
  upvotes   Int      @default(0)
  board_id  Int
  board     Board    @relation(fields: [board_id], references: [board_id], onDelete: Cascade)
  createdAt DateTime @default(now())
  comments        Comment[]
}

model Comment {
  comment_id      Int      @id @default(autoincrement())
  message         String
  author          String
  createdAt       DateTime @default(now())
  cardId          Int
  card            Card     @relation(fields: [cardId], references: [card_id], onDelete: Cascade)
}
